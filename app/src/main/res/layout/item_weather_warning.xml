<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 헤더 부분 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <!-- 특보 아이콘 -->
            <TextView
                android:id="@+id/tv_warning_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🌀"
                android:textSize="24sp"
                android:layout_marginEnd="12dp" />

            <!-- 제목과 심각도 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_warning_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="태풍 경보"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/tv_severity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="매우강함"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- 상태 표시 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🚨"
                android:textSize="20sp" />

        </LinearLayout>

        <!-- 발효 시간 -->
        <TextView
            android:id="@+id/tv_valid_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="발효: 12/25 14:00\n해제: 12/26 06:00"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="8dp" />

        <!-- 영향 지역 -->
        <TextView
            android:id="@+id/tv_affected_areas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="영향지역: 동해, 울릉도"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- 상세 설명 -->
        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="제10호 태풍 카눈이 일본 남쪽 해상에서 북동진하고 있습니다. 동해상 해상에서는 풍속 25m/s 이상의 강풍과 4m 이상의 높은 파고가 예상됩니다."
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:lineSpacingExtra="2dp"
            android:maxLines="3"
            android:ellipsize="end" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>